<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendChoose">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공감 친구를 고르세요"
        android:textSize="15pt"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/friend1"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/button_round"
        android:text="3D 친구 00"
        android:textSize="17pt"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/friend2"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/popup_round"
        android:text="3D 친구 ㅁㅁ"
        android:textSize="17pt"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friend1"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>